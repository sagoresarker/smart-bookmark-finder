{
    "manifest_version": 3,
    "name": "Smart Bookmark Finder",
    "version": "1.0",
    "description": "Shows relevant bookmarks alongside search results",
    "permissions": [
      "bookmarks",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "*://*.google.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.google.com/search*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }